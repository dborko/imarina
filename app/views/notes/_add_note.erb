<p id="add_note_link" style="display:none;"><%= link_to_function image_tag('add_small.gif', :alt => 'Add a note.', :class => 'icon') + ' Add a Note', "Element.show('add_note');Element.hide('add_note_link');$('note_title').focus();" %></p>
<div id="add_note">
  <%= form_tag(new_note_url, :method => 'post') %>
    <% if @group %>
      <%= hidden_field_tag 'note[group_id]', @group.id %>
    <% end %>
    <p>
      <label for="note_title">Title:</label>
      <%= text_field_tag 'note[title]', '', :id => 'note_title' %><br/>
      <label for="note_body">Note:</label><br/>
      <%= text_area_tag 'note[body]', '', :id => 'note_body', :rows => '10' %><br/>
      <%= submit_tag 'Add Note', :style => 'width:100px;' %>
    </p>
  </form>
</div>
<script type="text/javascript">
  Element.hide('add_note');
  Element.show('add_note_link');
</script>
