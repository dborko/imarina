<% content_for :sidebar do %>
  <%= render :partial => 'photo' %>
  <p>
    Services provided by<br/>
    <%= link_to @person.name, person_path(:id => @person) %>
  </p>
<% end %>

<div>
  <%= link_to 'Business Directory', search_path(:business => true) %> &raquo;
  <% if @person.business_category.to_s.any? %>
    <%= link_to h(@person.business_category), search_path(:business => true, :category => @person.business_category) %> &raquo;
  <% end %>
</div>
<h1><%=h @person.business_name %></h1>

<p><%=h @person.business_description %></p>

<table>
  <% if @person.business_phone.to_i > 0 %>
    <tr><td>Business Phone:</td><td><%= format_phone @person.business_phone %></td></tr>
  <% end %>
  <% if @person.business_email.to_s.any? %>
    <tr><td>Business Email:</td><td><%= mail_to @person.business_email %></td></tr>
  <% end %>
  <% if @person.business_website.to_s.any? %>
    <tr><td>Business Website:</td><td><%= link_to @person.business_website, @person.business_website %></td></tr>
  <% end %>
  <% if @person.business_address.to_s.any? %>
    <tr><td>Business Address:</td><td><%= @person.business_address.split(/\n/).map { |l| h(l) }.join('<br/>') %></td></tr>
  <% end %>
</table>
