<% @person.pictures.each do |picture| %>
  <div class="picture">
    <%= link_to image_tag(medium_picture_path(picture), :alt => 'click to enlarge'), picture, :title => 'click to enlarge' %>
  </div>
<% end %>

<% if @person.pictures.count == 0 %>
  <p><em>This event doesn't have any pictures yet.</em></p>
<% end %>