<% if @person.verses.count > 0 %>
  <% @person.verses.each do |verse| %>
    <%= render :partial => 'verses/verse', :locals => {:verse => verse} %>
  <% end %>
<% else %>
  <p><em>No verses yet!</em></p>
<% end %>

<% if @logged_in == @person %>
  <%= render :partial => 'verses/add_verse' %>
<% end %>