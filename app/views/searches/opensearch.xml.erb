<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/"
                       xmlns:moz="http://www.mozilla.org/2006/browser/search/">
<ShortName><%= Setting.get(:name, :site) %> Search</ShortName>
<Description>Search for people on <%= Setting.get(:url, :site) %></Description>
<InputEncoding>utf-8</InputEncoding>
<% if nil # no onebody icon yet %>
<Image width="16" height="16">data:image/png;base64,</Image>
<% end %>
<Url type="text/html" method="GET" template="<%= search_url %>">
  <Param name="name" value="{searchTerms}"/>
</Url>
<moz:SearchForm><%= search_url %></moz:SearchForm>
</OpenSearchDescription>
