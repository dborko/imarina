<p>Please select your name from the list below.</p>
<form method="post">
  <p>
    Please select your name from the list below:
    <% @people.each do |person| %>
      <br/>
      <%= radio_button_tag :id, person.id, false, :class => "checkbox", :id => "person_#{person.id}" %>
      <label for="person_<%= person.id %>" style="display:inline;"><%=h person.name %></label>
    <% end %>
  </p>
  <p><%= submit_tag 'I am this person.' %></p>
</form>
